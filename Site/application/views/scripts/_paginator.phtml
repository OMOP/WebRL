<?php if ($this->pageCount > 1): ?>
<!-- Previous page link -->
<?php if (isset($this->previous)): ?>
    <a href="<?php echo Application_View_Helper_Paginator::getPageUrl($this, $this->first, $this->urlOptions); ?>" title="First">
        First
    </a>
    <a href="<?php echo Application_View_Helper_Paginator::getPageUrl($this, $this->previous, $this->urlOptions); ?>" title="Prev">
        &lt;&lt;
    </a>
<?php endif; ?>

<?php if ($this->firstPageInRange > 1):?>
    &nbsp;&nbsp;&nbsp;...
<?php endif ?>
<!-- Numbered page links -->
<?php foreach ($this->pagesInRange as $page): ?>
    <?php if ($page != $this->current): ?>
        <a href="<?php echo Application_View_Helper_Paginator::getPageUrl($this, $page, $this->urlOptions); ?>"> 
            <?php echo $page; ?>
        </a>
    <?php else: ?>
        <span><?php echo $page; ?></span>
    <?php endif; ?>
<?php endforeach; ?>

<?php if ($this->lastPageInRange < $this->pageCount):?>
    &nbsp;&nbsp;&nbsp;...
<?php endif ?>

<!-- Next page link -->
<?php if (isset($this->next)): ?>
    <a href="<?php echo Application_View_Helper_Paginator::getPageUrl($this, $this->next, $this->urlOptions); ?>" title="next">
        &gt;&gt;
    </a>
    <a href="<?php echo Application_View_Helper_Paginator::getPageUrl($this, $this->last, $this->urlOptions); ?>" title="Last">
        Last
    </a>
<?php endif; ?>
<?php endif; ?>
